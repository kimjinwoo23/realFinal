	<insert id="insertMT" parameterType="com.six.dto.Moviepay">
				INSERT INTO MOVIEPAY (
        moviepay_adult, 
        moviepay_child,
        moviepay_adultpay,
        moviepay_childpay,
        moviepay_price,
        moviepay_seat,
        moviepay_paydate,
        moviepay_point_use,
        moviepay_point,
        moviepay_refund,
        moviepay_viewdate,
        moviepay_viewtime,
        movie_no,
        member_no,
        moviepay_viewregion
    ) VALUES (
        #{moviepayAdult}, 
        #{moviepayChild},
        #{moviepayAdultpay},
        #{moviepayChildpay},
        #{moviepayPrice},
        #{moviepaySeat},
        #{moviepayPaydate},
        #{moviepayPointUse},
        #{moviepayPoint},
        #{moviepayRefund},
