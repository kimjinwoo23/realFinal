<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
    <mapper namespace="com.six.mapper.Commentmapper">
    
    <select id="selectCommentsByMovieNo" parameterType="int" resultType="com.six.dto.Comment">
        SELECT * FROM comment WHERE movie_no = #{movieNo}
    </select>
    
    <insert id="insertComment" parameterType="com.six.dto.Comment">
    	insert into comment(score,text)
    	VALUES(#{score},#{text});
    </insert>
    
    <delete id="deleteComment" parameterType="String">
    	delete from comment 
    	WHERE SCORE = #{score}
    	AND TEXT=#{text}
    </delete>
    
    
    </mapper>
        
        
        
        